{% extends 'base.html.twig' %}

{% block title %}Mes réservations
{% endblock %}

{% block style %}
    <style>
    .corps {
	    margin: 0;
	    background: white  !important; 
    }
    </style>
{% endblock %}

{% block body %}
	<h1>Mes réservations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Start</th>
				<th>End</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for calendar in calendars %}
				<tr>
					<td>{{ calendar.id }}</td>
					<td>{{ calendar.Start ? calendar.Start|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendar.End ? calendar.End|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_calendar_show', {'id': calendar.id}) }}">Aperçu de ma réservation</a>
						<a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">Modifier ma réservation</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_calendar_new') }}">Nouvelle réservation</a>
{% endblock %}
