{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{% block nav %}{% endblock %}

	{% if app.user %}
		<div class="mb-3">
			You are logged in as
			{{ app.user.getFirstName('firstName') }},
			<a href="{{ path('app_logout') }}">Logout</a>
		</div>
	{% endif %}

	<div class="d-flex justify-content-center">
		<h1>Bienvenue au ParasLodge</h1>
	</div>
{% endblock %}
