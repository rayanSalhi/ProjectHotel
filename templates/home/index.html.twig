{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{% block nav %}{% endblock %}



	<div class="d-flex justify-content-center">
		<h1>Bienvenue au ParasLodge, {{app.user.firstName}}</h1>
	</div>
	{% block reservation %}
		{% if app.user.LastName %}
		<div class="d-flex justify-content-center">
			<table class="table table-dark table-over mt-5 text-center w-75">
				<thead>
					<tr>
						<th scope="col">VOTRE RESERVATION</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">Chambre numéro: </th>
						<td>getValue</td>
					</tr>
					<tr>
						<th scope="row">Type de chambre: </th>
						<td>getValue</td>
					</tr>
					<tr>
						<th scope="row">Superficie: </th>
						<td>getValue</td>
					</tr>
					<tr>
						<th scope="row">Option(s): </th>
						<td>getValue</td>
					</tr>
					<tr>
						<th scope="row">Tarif: </th>
						<td>getValue</td>
					</tr>
				</tbody>
			</table>
		</div>	
		{% else %}
			Vous n'avez pas de réservation d'hotel, souhaitez vous faire une réservation ?
		{% endif %}
	{% endblock %}
{% endblock %}
