{% extends 'base.html.twig' %}

{% block title %}Welcome To ParasLodge
{% endblock %}

{% block CanvasTitle %}
	{# <h5 class="offcanvas-title" id="offcanvasNavbarLabel">MON COMPTE</h5> #}
{% endblock %}	

{% block menuDroite %}
	{% if app.user %}
		<div class="d-flex justify-content-start mb-2">
			<h2>
                Bonjour !</br>
            </h2>
        </div>    
        <div class="d-flex justify-content-start bg-info mb-1">    
            <h1>    
                {{app.user.FirstName}}
			    {{app.user.LastName}}</br>
            </h1>
		</div>
        <div class="d-flex justify-content-start bg-info mb-1">    
            {{app.user.Email}}</br>
        </div>
        <div class="d-flex justify-content-center bg-light mb-5">
            <h3> 
                Votre statut: {% if is_granted('ROLE_ADMIN') %} Administrateur {% else %} Classique {% endif %}
            <h3>
		</div>
        <hr class="divider py-1 bg-dark mt-5 mb-5"/>
        <h4 class="mb-5 font-weight-bold"> Votre compte</h4>
        <div class="mt-5 mb-5">         
            <a href="{{ path('app_login') }}">
                <div class="d-flex justify-content-between">
                    <h5> Votre profil</h5>
                    <i class="bi bi-chevron-right"></i>
                </div>
            </a>     
		</div>
        <hr class="divider py-1 bg-dark mt-4 mb-5"/>
        <a href="{{ path('app_login') }}">
            <div class="d-flex justify-content-between mb-5">
                <h5>Votre réservation</h5>
                <i class="bi bi-chevron-right"></i>
		    </div>
        </a>    
        <div class="d-flex justify-content-center mb-5">
            <a class="nav-link" href="{{path('app_logout')}}"><button class="btn btn-lg btn-primary" type="button">Se déconnecter</button></a>
		</div>
		<div class="d-flex justify-content-center mb-5">
        {% if is_granted("ROLE_ADMIN") %}
            <a class="nav-link d-flex justify-content-center position-fixed bottom-0" href="{{path('admin')}}"><button class="btn btn-lg btn-danger" type="button">Accès administration</button></a>
        {% endif %}
		</div>
	{% else %}
		<h1>S'enregistrer</h1>

		<div class="d-flex justify-content-center bg-secondary">
			<div class="form-group shadow p-3 m-5 bg-body rounded ">
				{{ form_start(registrationForm) }}
				{{ form_end(registrationForm) }}
				<a href="{{ path('app_login') }}"> <button class="btn btn-lg btn-primary" type="button">
						Déja inscrit ?
				</button></a>
			</div>
		</div>
	{% endif %}
{% endblock %}



